---
import '../styles/global.css';
const { title = 'Dairy Velvet' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <title>{title}</title>
    <!-- Google tag (gtag.js) -->
    {import.meta.env.PROD && (
      <>
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-QEHVXBTJNK"></script>
        <script is:inline>
          window.dataLayer = window.dataLayer || [];
          function gtag(){ window.dataLayer.push(arguments); }
          gtag('js', new Date());
          gtag('config', 'G-QEHVXBTJNK');
        </script>
      </>
    )}
  </head>
  <body class="bg-gray-50 text-gray-800">
    <header class="bg-white border-b border-slate-100">
      <div class="max-w-7xl mx-auto flex items-center justify-between px-4 sm:px-6 py-3">
        <!-- Logo -->
        <a href="#" class="flex items-center gap-2">
          <img
            src="/images/logo.png"
            alt="Company Logo"
            class="h-12 w-12 rounded object-cover"
          />
        </a>

        <!-- Right side -->
        <div class="flex items-center gap-3 sm:gap-6">
          <!-- Email (always visible now) -->
          <a
            href="mailto:team@dairyvelvet.com"
            class="text-xs sm:text-sm font-medium text-gray-700 hover:text-indigo-600">
            team@dairyvelvet.com
          </a>

          <!-- Social media icons -->
          <div class="flex items-center gap-3 sm:gap-4 text-gray-500">
            <a
              target="_blank"
              href="https://www.facebook.com/profile.php?id=61580376261342"
              aria-label="Facebook"
              class="hover:text-indigo-600">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8"
                viewBox="0 0 24 24"
                fill="#3E1D23">
                <path
                  d="M22 12c0-5.522-4.477-10-10-10S2 6.478 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987H7.898v-2.89h2.54V9.797c0-2.507 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562v1.875h2.773l-.443 2.89h-2.33v6.987C18.343 21.128 22 16.991 22 12z">
                </path>
              </svg>
            </a>
            <a
              target="_blank"
              href="https://www.instagram.com/dairy_velvet/"
              aria-label="LinkedIn"
              class="hover:text-indigo-600">
             <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="#3E1D23">
                <path
                  d="M7 2C4.2 2 2 4.2 2 7v10c0 2.8 2.2 5 5 5h10c2.8 0 5-2.2 5-5V7c0-2.8-2.2-5-5-5H7zm10 2c1.7 0 3 1.3 3 3v10c0 1.7-1.3 3-3 3H7c-1.7 0-3-1.3-3-3V7c0-1.7 1.3-3 3-3h10zM12 7a5 5 0 100 10 5 5 0 000-10zm0 2a3 3 0 110 6 3 3 0 010-6zm4.8-3a1.2 1.2 0 11-2.4 0 1.2 1.2 0 012.4 0z">
                </path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </header>

    <!-- <header class="p-4 border-b">
            <nav class="flex space-x-4">
                <a href="/" class="hover:underline">Home</a>
                <a href="/about" class="hover:underline">About</a>
                <a href="/contact" class="hover:underline">Contact</a>
            </nav>
        </header> -->

    <main class="">
      <slot />
      <!-- page content goes here -->
    </main>

    <footer class="p-4 border-t border-slate-200 text-sm text-center text-slate-500">
      Â© {new Date().getFullYear()} Dairy Velvet
    </footer>
  </body>
</html>
