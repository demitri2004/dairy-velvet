---
import '../styles/global.css';
const { title = 'Dairy Velvet' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-800">
    <header class="bg-white border-b border-slate-100">
      <div class="max-w-7xl mx-auto flex items-center justify-between px-4 sm:px-6 py-3">
        <!-- Logo -->
        <a href="#" class="flex items-center gap-2">
          <img
            src="/images/logo.jpg"
            alt="Company Logo"
            class="h-12 w-12 rounded-full object-cover"
          />
        </a>

        <!-- Right side -->
        <div class="flex items-center gap-3 sm:gap-6">
          <!-- Email (always visible now) -->
          <a
            href="mailto:dairyvelvet@gmail.com"
            class="text-xs sm:text-sm font-medium text-gray-700 hover:text-indigo-600">
            dairyvelvet@gmail.com
          </a>

          <!-- Social media icons -->
          <div class="flex items-center gap-3 sm:gap-4 text-gray-500">
            <a href="#" aria-label="Facebook" class="hover:text-indigo-600">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                viewBox="0 0 24 24"
                fill="currentColor">
                <path
                  d="M22 12c0-5.522-4.477-10-10-10S2 6.478 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987H7.898v-2.89h2.54V9.797c0-2.507 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562v1.875h2.773l-.443 2.89h-2.33v6.987C18.343 21.128 22 16.991 22 12z">
                </path>
              </svg>
            </a>
            <a href="#" aria-label="Twitter" class="hover:text-indigo-600">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                viewBox="0 0 24 24"
                fill="currentColor">
                <path
                  d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z">
                </path>
              </svg>
            </a>
            <a href="#" aria-label="LinkedIn" class="hover:text-indigo-600">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                viewBox="0 0 24 24"
                fill="currentColor">
                <path
                  d="M19 0h-14C2.2 0 0 2.2 0 5v14c0 2.8 2.2 5 5 5h14c2.8 0 5-2.2 5-5V5c0-2.8-2.2-5-5-5zM8 19H5V9h3v10zm-1.5-11.3c-1 0-1.7-.8-1.7-1.7 0-1 .8-1.7 1.7-1.7s1.7.8 1.7 1.7c0 .9-.7 1.7-1.7 1.7zM20 19h-3v-5.5c0-1.1 0-2.5-1.5-2.5s-1.7 1.2-1.7 2.4V19h-3V9h2.8v1.4h.1c.4-.8 1.3-1.6 2.7-1.6 2.9 0 3.6 1.9 3.6 4.3V19z">
                </path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </header>

    <!-- <header class="p-4 border-b">
            <nav class="flex space-x-4">
                <a href="/" class="hover:underline">Home</a>
                <a href="/about" class="hover:underline">About</a>
                <a href="/contact" class="hover:underline">Contact</a>
            </nav>
        </header> -->

    <main class="p-6">
      <slot />
      <!-- page content goes here -->
    </main>

    <footer class="p-4 border-t text-sm text-center text-slate-500">
      Â© {new Date().getFullYear()} Dairy Velvet
    </footer>
  </body>
</html>
